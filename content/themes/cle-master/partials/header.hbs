<header class="lp-auto-hide-header">
  {{!-- Blog logo --}}
  <div class="logo">
    <a href="{{@blog.url}}">
      {{#if @blog.logo}}
        <img src="{{@blog.logo}}" alt="{{@blog.title}}">
      {{else}}
        <h3 class="blog-title">{{@blog.title}}</h3>
      {{/if}}
    </a>
  </div>

  {{!-- Blog navigation --}}
  <nav class="lp-primary-nav">
    <a href="#lp-navigation" class="nav-trigger">
      <span>
        <em aria-hidden="true"></em>
        Menu
      </span>
    </a>

    <ul id="lp-navigation">
      {{navigation}}
    </ul>
  </nav>
</header>
