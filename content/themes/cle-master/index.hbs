{{!-- The main content area on the homepage --}}
<main id="content" class="content" role="main">

    {{!-- Search --}}
    <div class="search-form section">
      <form class="column">
        {{!-- Search box --}}
        <input id="search-field" class="search-input" placeholder="Quick search your favorite post...">
        <i class="search-icon">
          <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 52.966 52.966" style="enable-background:new 0 0 52.966 52.966;" xml:space="preserve" width="30px" height="30px">
